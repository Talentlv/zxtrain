/* pages/trainList/trainList.wxss */
.date{
  display: flex;
  flex-direction: row;
  height: 40px;
  background-color: #5495e6; 
}
.date view{
  margin: 0 auto;
  color: #fff;
  padding-top: 10px;
}
.message-content{
  width: 100%;
  height: 600px;
  background-color: #f4f4f4;
  padding-top: 10px;
}
.bg{
  width: 96%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 10px;
}
.item{
  display: flex;
  flex-direction: row;
}
.wrap{
  width: 25%;
  margin: 0 auto;
  padding: 10px 0 0 5px;
}
.left .startTime{
  font-size: 16px;
  font-weight: bold;
}
.station{
  margin-top: 3px;
  font-size: 12px;
}
.center{
  margin-left: 10px;
  text-align: center;
  font-size: 12px;
  color: #666;
}
.center .hr{
  width: 50%;
  margin: 0 auto;
  height: 1px;
  background-color: #ccc;
  opacity: 0.5;
  margin-top: 2px;
  margin-bottom: 3px;
}
.right{
  text-align: right;
}
.right .endTime{
  font-size: 16px;
}
.price{
  height: 45px;
  line-height: 45px;
  font-size: 14px;
  text-align: right;
  margin-right: 5px;
}
.price text{
  font-size: 10px;
  color: #999;
}
.seat-hr{
  width: 98%;
  margin: 0 auto;
  padding-top: 8px;
  border-bottom: 1px dotted #ccc;
}
.seat{
  display: flex;
  flex-direction: row;
  margin: 0 auto;
}
.wrap-seat{
  width: 25%;
  margin: 0 auto;
  font-size: 12px;
  color: #999;
  padding: 8px 0;
}
.haveSeat{
  padding-left: 5px;
}
.toughBed{
  text-align: center;
}
.toughBed text{
  color: red;
}
.softBed{
  text-align: right;
}
.noSeat{
  text-align: right;
  padding-right: 5px;
}
.nav{
  width: 100%;
}
.bottomNav{
  width: 80%;
  height: 40px;
  line-height: 40px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  font-size: 12px;
  position: fixed;
  left: 35px;
  bottom: 10px;
  border: 1px solid #f4f4f4;
  border-radius: 20px;
}
.bottomNav view{
  
}
.selected{
  margin: 0 auto;
  color: #1E90FF;
}
.common{
  margin: 0 auto;
}