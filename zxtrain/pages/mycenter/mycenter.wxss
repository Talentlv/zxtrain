/* pages/mycenter/mycenter.wxss */
.amountBg{
  height: 80px;
  background-color: #5495e6;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.account{
  width: 70%;
  color: #fff;
  position: relative;
  margin-left: 5px;
}
.name{
  font-size: 16px;
}
.account text{
  font-size: 13px;
}
.nav{
  width: 15px;
  position: absolute;
  color: #fff;
  top: 10px;
  right: 0;
}
.content{
  background-color: #f4f4f4;
  height: 500px;
}
.order{
  display: flex;
  flex-direction: row;
  width: 94%;
  height: 70px;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  text-align: center;
  align-items: center;
  position: absolute;
  top: 75px;
  margin-left: 3%;
}
.item{
  width: 25%;
  font-size: 12px;
}
.clear{
  clear: both;
  padding-top: 70px;
}
.list-item{
  height: 50px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  align-items: center;
}
.icon{
  width: 50px;
  text-align: center;
}
.itemName{
  width: 40%;
}
.remark{
  font-size: 12px;
  color: #ccc;
}
.right{
  width: 40%;
  font-size: 14px;
  color: #999;
  text-align: right;
}
.line{
  height: 10px;
}
.hr{
  height: 1px;
  background-color: #ccc;
  opacity: 0.2;
}